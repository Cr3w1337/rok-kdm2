{% extends 'base.html.twig' %}

{% block page_title %}Edit Governor Snapshot{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>
                {{ govSnapshot.governor.name }}
                {% if govSnapshot.snapshot %}
                    <span class="pill-border">{{ govSnapshot.snapshot.name }}</span>
                {% endif %}
            </h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="text-danger">
                    {{ form_errors(form) }}
                </div>
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.power} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.highestPower} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.kills} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.t1Kills} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.t2Kills} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.t3Kills} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.t4Kills} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.t5Kills} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.deads} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.rssGathered} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.rssAssistance} only %}
                {% include 'scribe/edit_gov_snapshot_field_int.html.twig' with {field: form.helps} only %}

                <div class="form-group">
                    {{ form_widget(form.save) }}
                    {{ form_widget(form.saveAndReturn, {'attr': {'class': 'btn btn-primary ml-2'}}) }}
                    {{ form_widget(form.saveAndMarkCompleted, {'attr': {'class': 'btn btn-primary ml-2'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}