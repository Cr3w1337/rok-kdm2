<div class="search-gov card shadow-sm status-{{ gov.displayStatus }} mb-3">
    <div class="card-header">
        <h3 class="search-header float-left">
            <a href="{{ path('governor', {id: gov.id}) }}">{{ gov.name }}</a>
        </h3>
        <span class="gov-id search-pill pill-border ml-3">{{ gov.id }}</span>
        {% if gov.alliance %}
            <div class="search-pill pill-border" title="{{ gov.alliance.displayName }}">
                <span class="pill-label">{{ gov.alliance.tag }}</span>
            </div>
        {% endif %}
        {% if actions|default %}
        <div class="float-right">
            {{ actions|raw }}
        </div>
        {% endif %}
    </div>
    <div class="status-bar" title="{{ gov.displayStatus }}"></div>
    <div class="card-body pb-1">
        {% if expanded|default(false) %}
            {% include 'search/gov_pills_expanded.html.twig' with({gov: gov}) only %}
        {% else %}
            {% include 'search/gov_pills.html.twig' with({gov: gov}) only %}
        {% endif %}
    </div>
</div>