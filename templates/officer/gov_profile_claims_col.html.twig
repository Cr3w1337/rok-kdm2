<div class="col-sm">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th scope="col">{{ title }}</th>
        </tr>
        </thead>
        <tbody>
        {% for claim in claims %}
            <tr>
                <td>
                    {{ claim.user.discordDisplayName }}
                    <a
                        href="{{ path('governor_claim', {id: claim.id}) }}"
                        class="btn btn-outline-secondary btn-sm ml-2 px-2 py-0"
                    >View</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>